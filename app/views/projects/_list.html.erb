<div align="center">
    <% unless @projects.nil? || @projects.empty?%>
        <% @projects.each do |project| %>
          <div class="projectHead panel-heading" style="background: #466FAF; color: #b3ffff; width: 50%">
            <div class="row">
              <div class="col-md-1">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true" style="font-size: 1.6em;"></span>
              </div>

              <div class="col-md-10"><h4 style="display: inline;"><%= project.name %></h4></div>

                <div class="col-md-1">
                  <div class="projectOptions" style="display: none;">
                    <%= link_to update_project_path(id: project.id), remote: true, style: 'color: #99B1D2; font-size: 1.3em;' do%>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <% end %>
                    <div style="color: #99B1D2; display: inline;">|</div>
                    <%= link_to delete_project_path(id: project.id), remote: true, style: 'color: #99B1D2; font-size: 1.3em;' do%>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    <% end %>
                  </div>
                </div>
              </div>
          </div>

          <div class="panel panel-primary" align="center" style="width: 50%;">
            <div class="panel-heading" style="background: #CECECE; color: #b3ffff;">
              <%= render 'tasks/addTask_form', :project => project%>
            </div>
            <div class="panel-body">
              <%= render 'tasks/tableTasks', :project => project%>
            </div>
          </div>
        <% end %>
    <% else %>
        <h4>There are no any projects for you.</h4>
    <% end %>

  <% unless flash[:error].nil? %>
      <div class="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= flash[:error] %></strong>
      </div>
  <% end %>

</div>