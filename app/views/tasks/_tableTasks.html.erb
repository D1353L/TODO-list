<table class="table table-bordered table-hover sortable">
  <tbody>
  <% project.tasks.each do |task| %>
      <tr class="taskRow" id=<%=task.id%>>
        <td>
          <%= check_box_tag 'task_checkbox', task.id, task.completed %>
        </td>

        <td width="90%"><%= task.name %></td>

        <td width="10%">
          <div style="display: none;">
            <span id="sort" class="glyphicon glyphicon-sort" aria-hidden="true" style="color: #99B1D2; cursor: default;"></span>
            <div style="color: #99B1D2; display: inline; cursor: default;">|</div>

            <%= link_to update_task_path(id: task.id), remote: true, style: 'color: #99B1D2;' do%>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <div style="color: #99B1D2; display: inline; cursor: default;">|</div>

            <%= link_to delete_task_path(id: task.id), remote: true, style: 'color: #99B1D2;' do%>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>