.container{align: 'center'}
  = form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: 'form-signin'}) do |f|
    %h2.form-signin-heading Log in
    - flash.each do |key, value|
      - if value != 'You need to sign in or sign up before continuing.'
        %div{:class => "alert"}
          = value
    %div
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address'
    %div
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me
    %br
    %button.user-button.btn.btn-lg.btn-primary.btn-block Log in